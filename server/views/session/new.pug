extends ../layouts/application.pug

block header
  = t('views.session.new.signIn')

block content
  +formFor()(action=route('session') method='post')
    +input(errors, t('views.users.email'), t('views.users.email'), signInForm)(type="text")
    +input(errors, t('views.users.password'), t('views.users.password'))(type="password")
    +submit(errors)(value=t('views.session.new.submit'))
