extends ../layouts/application.pug

block header
  = t('views.users.new.signUp')

block content
  +formFor()(action=route('users') method='post')
    +input(errors, t('views.users.firstName'), '', user)(type="text")
    +input(errors, t('views.users.lastName'), '', user)(type="text")
    +input(errors, t('views.users.email'), '', user)(type="text")
    +input(errors, t('views.users.password'), '', user)(type="password")
    +submit(user)(value=t('views.users.new.submit'))
