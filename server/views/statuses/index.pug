extends ../layouts/application.pug

block header
  = t('views.statuses.statuses')

block content
    +linkTo(route('newStatus'), 'get')(class='btn btn-primary' value=t('views.statuses.createStatus'))

    table.table.table-striped
        thead
            tr
                th= t('views.statuses.id')
                th= t('views.statuses.name')
                th= t('views.statuses.createdAt')
        tbody
        each status in taskStatuses
            tr
                td= status.id
                td= status.name
                td= formatDate(status.createdAt)
                td
                    <div class="btn-group">
                        +linkTo(route('editStatus', { id: status.id }))(class='btn btn-primary' value=t('views.statuses.change'))
                        +buttonTo(route('deleteStatus', { id: status.id }), 'delete')(class='btn btn-danger' value=t('views.statuses.delete'))
                    </div>
