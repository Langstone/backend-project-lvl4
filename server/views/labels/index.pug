extends ../layouts/application.pug

block header
  = t('views.labels.labels')

block content
    +linkTo(route('newLabel'), 'get')(class='btn btn-primary' value=t('views.labels.createLabels'))

    table.table.table-striped
        thead
            tr
                th= t('views.labels.id')
                th= t('views.labels.name')
                th= t('views.labels.createdAt')
        tbody
        each label in labels
            tr
                td= label.id
                td= label.name
                td= formatDate(label.createdAt)
                td
                    <div class="btn-group">
                        +linkTo(route('editLabel', { id: label.id }))(class='btn btn-primary' value=t('views.labels.change'))
                        +buttonTo(route('deleteLabel', { id: label.id }), 'delete')(class='btn btn-danger' value=t('views.labels.delete'))
                    </div>
