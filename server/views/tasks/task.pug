extends ../layouts/application.pug

block header
    = task.name

    .row.mt-5.p-5.shadow.bg-white
        .col-12.col-md-8.order-2.oeder-md-1
            .lead.fw-normal.mb-4 #{task.discription}
        .col-12.col-md-4.border-start.px-3.order-1.order-md-2.mb-3.mb-md-0
            .mb-2
                span.me-2.badge.bg-danger.text-white #{task.status}
                span.me-2.badge.bg-info.text-white #{task.label}
            .d-flex.flex-wrap.mb-3
                span.text-muted.me-2 Автор
                span #{task.creatorName}
            .d-flex.flex-wrap.mb-3
                span.text-muted.me-2 Исполнитель
                span #{task.executorName}
            .d-flex.flex-wrap.mb-3
                span.text-muted.me-2 Дата создания
                span #{task.createdAt}
            .d-flex.flex-wrap.mb-3
                +linkTo(route('editTask', { id: task.id }))(class='btn btn-primary' value=t('views.statuses.change'))
                +buttonTo(route('deleteStatus', { id: task.id }), 'delete')(class='btn btn-danger' value=t('views.statuses.delete'))